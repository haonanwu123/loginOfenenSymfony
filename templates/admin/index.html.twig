{% extends 'adminbase.html.twig' %}

{% block title %}Admin{% endblock %}

{% block text %}
    <div class="container-sm mt-5">
        <div class="row text-center">
            {% if app.user %}
            <h1>Welkom {{ app.user.fname }}</h1>
            <p class="mt-3">Jij bent een admin.<br>Jouw dierenland heet: {{ app.user.part }}</p>
            {% endif %}
        </div>
        <table class="table mt-5">
            <thead>
            <tr>
                <th scope="col">Dier</th>
                <th scope="col">beschrijving</th>
                <th scope="col"></th>
            </tr>
            </thead>
            <tbody>
            {% for dier in diers %}
                <tr>
                    <td>{{ dier.name }}</td>
                    <td>{{ dier.description }}</td>
                    <td><a href="{{ path('app_delete', {id:dier.id}) }}" type="button" class="btn btn-danger">Verwijderen</a></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <a href="{{ path('app_insert') }}" type="button" class="btn btn-success">Toevoegen</a>
    </div>
    <style>
        .table th {
            border-bottom: 1px solid black;
        }

        /*.table tr td:nth-child(3) {*/
        /*    border-top: 1px solid black!important;*/
        /*}*/
    </style>
{% endblock %}
