{% extends 'adminbase.html.twig' %}

{% block title %}Admin{% endblock %}

{% block text %}
    <div class="container-sm mt-5">
        <div class="row text-center">
            {% if app.user %}
            <h1>Welkom {{ app.user.fname }}</h1>
            <p class="mt-3">Jij bent een admin.<br>Jouw dierenland heet: {{ app.user.part }}</p>
            {% endif %}
        </div>
        <table class="table mt-5">
            <thead>
            <tr>
                <th scope="col">Dier</th>
                <th scope="col">beschrijving</th>
            </tr>
            </thead>
            <tbody>
            {% for dier in diers %}
                <tr>
                    <td>{{ dier.name }}</td>
                    <td>{{ dier.description }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
